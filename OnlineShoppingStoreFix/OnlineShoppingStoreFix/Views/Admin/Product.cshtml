@model IEnumerable<OnlineShoppingStoreFix.DAL.Tbl_Product>

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Products</li>
</ol>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Product Details
        <a href="../Admin/ProductAdd" class="btn btn-info pull-right" style="float:right !important;color:white;"><i class="fa fa-plus"></i> Add New</a>
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Sr. No.</th>
                    <th>Category Name</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Sr. No.</th>
                    <th>Product Name</th>
                    <th>Action</th>

                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model)
                {
                    int count = 1;
                    <tr>
                        <td>@count</td>
                        <td>@item.ProductName</td>
                        <td>
                            <a href="#">

                                @Html.ActionLink("Edit", "ProductEdit", new { productId = item.ProductId })
                            </a>
                        </td>

                    </tr>
                    count++;
                }

            </tbody>

        </table>
    </div>
</div>

